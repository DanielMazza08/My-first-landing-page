@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap');

:root{
    --default-blue-link: #61abf0;
    --background: #2c2c3b;
    --background2: #fafafa;
    --default-text: #f2f2f2;
    --box-shadow: 0 0 12px rgba(0, 0, 0, 0.2);
    --title-highlight: var(--default-blue-link);
    --scale: scale(1.04);
}

@keyframes zoomIn{
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

@keyframes coloredWord{
    0% {
     color: #f2f2f2;
    }
    100% {
      color: var(--default-blue-link);
    }
  }

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html{
    overflow-y: scroll;
	scroll-behavior: smooth;
}

body{
    font-family: 'Roboto', sans-serif;
}

.container{
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    overflow: hidden;
    padding: 60px 0;
    border-bottom: 3px solid rgba(255,255,255, 0.1);
}

.hero{
    width: 100%;
    min-height: 100vh;
    background: var(--background);
    
}

.nav__hero{
    color: #fff;
    height: 70px;
}

.nav__container{
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: var(--background);
    
    align-items: center;
    justify-content: space-between;
    height: inherit;
    padding: 0;
}

.logo__name{
    font-size: 28px;
    color: var(--default-text);
}

.logo__name--modifier{
    color: var(--default-blue-link);
    font-weight: 700;
    animation: coloredWord 3s;
}

.link{
    display: inline-block;
    color: inherit;
    text-decoration: none;
    font-weight: 700;
    padding: 8px;
}

.link:hover{
    cursor: pointer;
    transform: var(--scale);
    border-bottom: 2px solid #f2f2f2;
}

.link--active{
    color: var(--default-blue-link);
    font-weight: 700;
    animation: coloredWord 3s;
}

.link--active:hover{
    color: #f2f2f2;
    cursor: pointer;
    transform: var(--scale);
}

.hero__main{
    height: calc(100vh - 65px);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0;
	animation: zoomIn 1s;
}

.mockup{
    object-fit: cover;
    width: 50%;
    max-height: 90vh;
    transition: transform 0.6s;
    animation: zoomIn 1s;
    cursor: pointer;
}

.mockup:hover{
    transform: var(--scale);
}

.hero__textos{
    width: 48%; 
}

.title{
    font-size: 56px;
    font-weight: 300;
    color: var(--default-text);
}

.title--modifier{
    font-weight: 700;
    color: var(--default-blue-link);
    animation: coloredWord 3s;
}

.copy{
    font-size: 24px;
    line-height: 1.5;
    color: var(--default-text);
    margin: 15px 0;
}

.copy--active{
    font-weight: 700;
}

.cta{
    padding: 20px 30px;
    margin: 3px;
    display: inline-block;
    background: var(--default-blue-link);
    color: #f2f2f2;
    text-decoration: none;
    text-align: right;
    font-weight: 700;
    border-radius: 6px;
    transition: transform 0.6s;
}

.cta:hover{
    color: var(--default-blue-link);
    background: #f2f2f2;
    transform: var(--scale);
    cursor: pointer;
}

/* Portfolio Section */

.portfolio{
    background: var(--background);
}

.title__portfolio{
    font-size: 56px;
    font-weight: 300;
    text-align: center;
    color: var(--default-text);
}

.portfolio__cards{
    display: flex;
    padding: 60px 0;
    justify-content: space-evenly;
    flex-wrap: wrap;
}

.portfolio__card{
    width: 30%;
    box-shadow: var(--box-shadow);
    border-radius: 10px;
    transition: transform 0.6s;
}

.portfolio__card:hover{
    transform: var(--scale);
}

.portfolio__picture{
    width: 100%;
    display: block;
    border-radius: 10px 10px 0 0;
    height: 200px;
    object-fit: cover;
}

.portfolio__texts{
    padding: 40px 20px 30px;
}

.portfolio__title{
    font-size: 1.5rem;
    text-align: center;
    color: var(--default-blue-link);
    margin: 0;
}

.portfolio__highlight{
    color: var(--title-highlight);
}

.portfolio__paragraph{
    font-weight: 400;
    line-height: 1.5;
    margin: 30px 0;
    color: var(--default-text);
}

.portfolio__cta{
    padding: 20px 30px;
    background: var(--default-blue-link);
    display: block;
    color: #f2f2f2;
    text-decoration: none;
    text-align: center;
    font-weight: 700;
    border-radius: 6px;
    transition: transform 0.6s;
}

.portfolio__cta:hover{
    color: var(--default-blue-link);
    background: #f2f2f2;
    transform: var(--scale);
}

/* Section Gallery */

.gallery{
    background: var(--background);
}

.gallery__container{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    overflow: hidden;
}
.gallery__texts{
    margin-bottom: 40px;
}

.title__gallery{
    font-size: 56px;
    font-weight: 300;
    text-align: center;
    color: var(--default-text);
} 

.gallery__highlight{
    color: var(--title-highlight);
}

.gallery__img{
    width: 30%;
    object-fit: cover;
    margin-bottom: 20px;
    display: block;
    box-shadow:  0px 0px 3px 0px rgba(0, 0, 0, 0.5);
    cursor: pointer;
    overflow: hidden;
    transition: transform 0.6s;
}

.gallery__img:hover{
    transform: var(--scale);
}

/* Footer */

.footer{
    background: #2c2c3b;

}

.footer .container{
    border-bottom: none;
}

.form{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.footer__texts{
    margin-bottom: 40px;
}

.title__footer{
    font-size: 56px;
    font-weight: 300;
    text-align: center;
    color: var(--default-blue-link);
}

.input{
    background: transparent;
    border: 0px;
    color: #fff;
    outline: none;
    border: 3px solid rgba(255,255,255, 0.1);
    padding: 20px 10px;
}

.input::placeholder{
    color: var(--default-text);
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
}

input[type="text"],
input[type="email"]{
    display: inline-block;
    width: 49%;
    margin-bottom: 30px;
}

.form textarea{
    width: 100%;
    height: 380px;
    margin-bottom: 15px;
    resize: none;
}

input[type="submit"]{
    padding: 20px 30px;
    margin: 3px;
    display: inline-block;
    background: var(--default-blue-link);
    color: #f2f2f2;
    text-decoration: none;
    text-align: right;
    font-weight: 700;
    border-radius: 6px;
    transition: transform 0.6s;
}

input[type="submit"]:hover{
    color: var(--default-blue-link);
    background: #f2f2f2;
    transform: var(--scale);
    cursor: pointer;
}

.socialmedia{
    margin-top: 24px;
    display: flex;
    color: #f2f2f2;
    justify-content: center;
}

.socialmedia__legend{
    font-size: 1.2rem;
    font-weight: 400;
    text-align: center;
    color: var(--default-text);
}

.socialmedia__icon{
    font-size: 25px;
    margin-left: 18px;
    display: inline-block;
    cursor: pointer;
}

.socialmedia__icon:hover{
    color: var(--default-blue-link);
}